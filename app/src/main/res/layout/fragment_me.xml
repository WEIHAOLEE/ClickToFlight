<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    >

    <RelativeLayout
        android:id="@+id/rl_profile_photo"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_pf_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/profile_photo_round" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_pf_photo"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/username"
            android:textSize="25sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tv_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_pf_photo"
            android:layout_below="@id/tv_username"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="@string/userid"
            android:textSize="15sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/rl_profile_shape"
        android:layout_marginTop="-45dp"
        android:background="@drawable/profile_main_shape">

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_profile_shape"
        android:layout_below="@id/rl_profile_photo"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/profile_view_round">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_my_order_black_24dp"
            android:text="My Order"
            android:textColor="#000000"/>

    </RelativeLayout>




